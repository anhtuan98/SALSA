<?xml version="1.0" encoding="UTF-8"?>
<tosca:Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:elasticity="http://www.example.org/NewXMLSchema" 
	xmlns:tosca="http://docs.oasis-open.org/tosca/ns/2011/12"
	xmlns:salsa="http://www.example.com"
	xsi:schemaLocation="http://docs.oasis-open.org/tosca/ns/2011/12 TOSCA-v1.0.xsd"
	targetNamespace="http://tempuri.org"
	id="DaaSApp">

	<tosca:ServiceTemplate id="Main">
		<tosca:BoundaryDefinitions xsi:type="elasticity:TBoundaryDefinitionsExtension">
			<tosca:Policies>
				<tosca:Policy name="CG0: CONSTRAINT Cost &lt; 1000 $" policyType="SYBLConstraint" />
			</tosca:Policies>
		</tosca:BoundaryDefinitions>
		<tosca:TopologyTemplate>
			<tosca:NodeTemplate id="DataEndServiceTopologyService" type="substitutableNodeType">
				<tosca:Policies>
					<tosca:Policy
						name="Co1:CONSTRAINT latency &lt; 0.5 ms;Co2:CONSTRAINT cpuUsage &lt; 83 %"
						policyType="SYBLConstraint" />
				</tosca:Policies>
			</tosca:NodeTemplate>
			<tosca:NodeTemplate id="EventProcessingServiceTopologyService" type="substitutableNodeType">
				<tosca:Policies>
					<tosca:Policy name="Co3:CONSTRAINT responseTime &lt; 350 ms"
						policyType="SYBLConstraint" />
				</tosca:Policies>
			</tosca:NodeTemplate>			
			<tosca:RelationshipTemplate name="Directed Relation" id="directedRelation" type="CONNECTTO">
				<tosca:SourceElement ref="DataControllerServiceUnit_capa" />
				<tosca:TargetElement ref="EventProcessingServiceUnit_req" />
			</tosca:RelationshipTemplate>
		</tosca:TopologyTemplate>
	</tosca:ServiceTemplate>


	<tosca:ServiceTemplate id="DataEndServiceTopology" substitutableNodeType="DataEndServiceTopology">
		<tosca:BoundaryDefinitions>
			<tosca:Capabilities>
				<tosca:Capability ref="DataControllerServiceUnit_capa"/>
			</tosca:Capabilities>
		</tosca:BoundaryDefinitions>
		<tosca:TopologyTemplate>	
			<tosca:NodeTemplate id="DataControllerServiceUnit"
				name="DataControllerServiceUnit" type="software"
				minInstances="1" maxInstances="1">
				<tosca:Properties>
					 <MappingProperties>
                        <MappingProperty type="actions">
                            <property name="start">serviceName</property>
                            <property name="stop">serviceName</property>
                            <property name="reconfigure">customscript.sh</property>
                        </MappingProperty>
                    </MappingProperties>
				</tosca:Properties>
				<tosca:Capabilities>
					<tosca:Capability name="Data controller IP" type="variable" id="DataControllerServiceUnit_capa"></tosca:Capability>
				</tosca:Capabilities>
				<tosca:DeploymentArtifacts>
					<tosca:DeploymentArtifact artifactType="sh" name="Deployment script" artifactRef="deployDataController"/>
				</tosca:DeploymentArtifacts>				
			</tosca:NodeTemplate>
			
			<tosca:NodeTemplate id="DataNodeServiceUnit" name="DataNodeServiceUnit" type="software" minInstances="1" maxInstances="unbounded">			
				<tosca:Requirements>
					<tosca:Requirement name="Connect to data controller" type="variable" id="DataNodeServiceUnit_req"></tosca:Requirement>
				</tosca:Requirements>
				<tosca:Policies>
					<tosca:Policy name="St3:STRATEGY CASE cpuUsage &lt; 40 : scalein" policyType="SYBLConstraint" />
				</tosca:Policies>
				<tosca:DeploymentArtifacts>
					<tosca:DeploymentArtifact artifactType="sh" name="Deployment script" artifactRef="deployDataNode"/>
				</tosca:DeploymentArtifacts>
			</tosca:NodeTemplate>
			
			<tosca:RelationshipTemplate name="Relation" type="CONNECTTO" id="controller2data">
				<tosca:SourceElement ref="DataControllerServiceUnit_capa"/>
				<tosca:TargetElement ref="DataNodeServiceUnit_req"/>
			</tosca:RelationshipTemplate>

		</tosca:TopologyTemplate>
	</tosca:ServiceTemplate>


	<tosca:ServiceTemplate id="EventProcessingServiceTopology" substitutableNodeType="EventProcessingServiceTopology">
		<tosca:BoundaryDefinitions>
			<tosca:Requirements>
				<tosca:Requirement ref="EventProcessingServiceUnit_req"/>
			</tosca:Requirements>
		</tosca:BoundaryDefinitions>
		<tosca:TopologyTemplate>
			<tosca:NodeTemplate id="LoadBalancerServiceUnit" type="software" name="LoadBalancerServiceUnit">
				<tosca:Capabilities>
					<tosca:Capability name="Load balancer IP" type="variable" id="LoadBalancerServiceUnit_capa"></tosca:Capability>
				</tosca:Capabilities>
				<tosca:DeploymentArtifacts>				
                    <tosca:DeploymentArtifact name="deploy" artifactType="sh" artifactRef="tosca:deployLoadBalancer"/>                
				</tosca:DeploymentArtifacts>
			</tosca:NodeTemplate>
			<tosca:NodeTemplate id="EventProcessingServiceUnit" type="software" name="EventProcessingServiceUnit">
				<tosca:Requirements>
					<tosca:Requirement name="Get Load balancer IP" type="variable" id="EventProcessingServiceUnit_req"></tosca:Requirement>
				</tosca:Requirements>
				<tosca:Policies>
					<tosca:Policy
						name="St2:STRATEGY CASE responseTime &lt; 360 ms AND throughput &lt; 400 : scalein"
						policyType="SYBLConstraint" />
				</tosca:Policies>
				<tosca:DeploymentArtifacts>				
                    <tosca:DeploymentArtifact name="deploy" artifactType="sh" artifactRef="tosca:deployEventProcessing"/>                
				</tosca:DeploymentArtifacts>
			</tosca:NodeTemplate>
			
			<tosca:RelationshipTemplate name="Relation" type="CONNECTTO" id="loadbalancer2EventProcessing">
				<tosca:SourceElement ref="LoadBalancerServiceUnit_capa" />
				<tosca:TargetElement ref="EventProcessingServiceUnit_req" />
			</tosca:RelationshipTemplate>
			
		</tosca:TopologyTemplate>
	</tosca:ServiceTemplate>
	
	<!-- DEPLOYMENT ARTIFACTS DESCRIPTION -->
	<tosca:ArtifactTemplate id="deployCassandraHead" type="sh">
        <tosca:ArtifactReferences>
            <tosca:ArtifactReference reference="http://128.130.172.215/salsa/upload/files/daas/deployCassandraHead.sh"/>
        </tosca:ArtifactReferences>
    </tosca:ArtifactTemplate>
    
    <tosca:ArtifactTemplate id="deployCassandraNode" type="sh">       
        <tosca:ArtifactReferences>
            <tosca:ArtifactReference reference="http://128.130.172.215/salsa/upload/files/daas/deployCassandraNode.sh"/>
        </tosca:ArtifactReferences>
    </tosca:ArtifactTemplate>
    
    <tosca:ArtifactTemplate id="deployLoadBalancer" type="sh">       
        <tosca:ArtifactReferences>
            <tosca:ArtifactReference reference="http://128.130.172.215/salsa/upload/files/daas/deployLoadBalancer.sh"/>
        </tosca:ArtifactReferences>
    </tosca:ArtifactTemplate>
    
    <tosca:ArtifactTemplate id="deployEventProcessing" type="sh">       
        <tosca:ArtifactReferences>
            <tosca:ArtifactReference reference="http://128.130.172.215/salsa/upload/files/daas/deployEventProcessing.sh"/>
        </tosca:ArtifactReferences>
    </tosca:ArtifactTemplate>
		
</tosca:Definitions>
