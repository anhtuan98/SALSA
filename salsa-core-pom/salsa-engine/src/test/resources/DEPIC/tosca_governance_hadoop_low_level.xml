<?xml version="1.0" encoding="UTF-8"?>
<tosca:Definitions xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:elasticity="http://www.example.org/NewXMLSchema" 
	xmlns:tosca="http://docs.oasis-open.org/tosca/ns/2011/12"
	xmlns:salsa="http://example.com"
	xsi:schemaLocation="http://docs.oasis-open.org/tosca/ns/2011/12 TOSCA-v1.0.xsd"
	targetNamespace="http://tempuri.org"
	id="DataGovernanceService">
	
	<tosca:ServiceTemplate id="DataGovernanceServiceTopology">
		
		<tosca:TopologyTemplate>
		
<!-- DESCRIPTION FOR CASSANDRA CLUSTER -->
			<tosca:NodeTemplate id="MasterNode"
				name="Governance master node" type="software"
				minInstances="1" maxInstances="1">
				<tosca:Capabilities>
					<tosca:Capability name="Master IP" type="variable" id="MasterNodeIp_capa"></tosca:Capability>
				</tosca:Capabilities>
				<tosca:DeploymentArtifacts>
					<tosca:DeploymentArtifact artifactType="sh" name="Deployment script" artifactRef="artifactGovernanceMaster"/>
				</tosca:DeploymentArtifacts>
			</tosca:NodeTemplate>
			
			<tosca:NodeTemplate id="SlaveNode" name="Governance slave node" type="software" minInstances="1" maxInstances="unbounded">			
				<tosca:Requirements>
					<tosca:Requirement name="Connect to MasterNode" type="variable" id="MasterNodeIp_req"></tosca:Requirement>
				</tosca:Requirements>				
				<tosca:DeploymentArtifacts>
					<tosca:DeploymentArtifact artifactType="sh" name="Deployment script" artifactRef="deployCassandraNode"/>
				</tosca:DeploymentArtifacts>
			</tosca:NodeTemplate>
			
			<tosca:NodeTemplate type="os" id="OS_MasterNode">
				 <tosca:Properties>
                    <MappingProperties>						
						<MappingProperty type="os">
							<property name="instanceType">000001920</property>	<!-- new DSG: image 5287914e-8857-4f0e-b01b-0f8b68fb902d, flavor: 000001920 -->
							<property name="provider">dsg@openstack</property> <!-- lal@stratuslab / dsg@openstack -->
							<property name="baseImage">b1f2fe86-c13f-4e71-afe7-41b4bb9ef99c</property> <!-- KBhcU87Wm5IZNOXZYGHrczGekwp / ami-00000163 -->
							<property name="packages"></property> <!-- use comma between package -->										
						</MappingProperty>
					</MappingProperties>
                </tosca:Properties>
			</tosca:NodeTemplate>
			
			<tosca:NodeTemplate type="os" id="OS_Datanode">
				 <tosca:Properties>
                    <MappingProperties>						
						<MappingProperty type="os">
							<property name="instanceType">000000960</property>
							<property name="provider">dsg@openstack</property> 
							<property name="baseImage">6986ab5c-1fbc-4b85-b564-c90c374ed0a3</property> 
							<property name="packages"></property>
						</MappingProperty>
					</MappingProperties>
                </tosca:Properties>
			</tosca:NodeTemplate>

			<tosca:RelationshipTemplate name="Relation" type="CONNECTTO" id="master2slave">
				<tosca:SourceElement ref="MasterNodeIp_capa"/>
				<tosca:TargetElement ref="MasterNodeIp_req"/>
			</tosca:RelationshipTemplate>						
			<tosca:RelationshipTemplate name="Relation" type="HOSTON" id="master2os">
				<tosca:SourceElement ref="MasterNode"/>
				<tosca:TargetElement ref="OS_MasterNode" />
			</tosca:RelationshipTemplate>
			<tosca:RelationshipTemplate name="Relation" type="HOSTON" id="slave2os">
				<tosca:SourceElement ref="SlaveNode"/>
				<tosca:TargetElement ref="OS_SlaveNode" />
			</tosca:RelationshipTemplate>	
				
		</tosca:TopologyTemplate>
	</tosca:ServiceTemplate>
	
<!-- DEPLOYMENT ARTIFACTS DESCRIPTION -->   
	<tosca:ArtifactTemplate id="artifactGovernanceMaster" type="sh">
        <tosca:ArtifactReferences>
            <tosca:ArtifactReference reference="http://128.130.172.215/salsa/upload/files/Jun/dataGovernance/governance-master-jun-install.sh"/>
        </tosca:ArtifactReferences>
    </tosca:ArtifactTemplate>
    
    <tosca:ArtifactTemplate id="artifactGovernanceSlave" type="sh">       
        <tosca:ArtifactReferences>
            <tosca:ArtifactReference reference="http://128.130.172.215/salsa/upload/files/Jun/dataGovernance/governance-slavenode-jun.sh"/>
        </tosca:ArtifactReferences>
    </tosca:ArtifactTemplate>
    
   
</tosca:Definitions>